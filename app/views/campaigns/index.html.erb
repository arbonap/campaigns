<h1 class="center">Indiegogo Campaigns</h1>

  <%= form_tag("/", method: "get", html: {class: 'form-horizontal'}) do %>
  <div class="form-group center">

      <%= label_tag(:search, "Search for:", class: 'control-label') %>
    <div class="col-xs-3">
      <%= text_field_tag :search, params[:search], class: 'form-control center' %>
    </div>
      <%= submit_tag "Search campaigns", name: nil, class: 'btn btn-success center' %>

  </div>


  <% @campaigns.each do |item| %>
     <div class="center">
       <h2>
         <%= item.title %>
       </h2>
     </div>
     <br>
     <div class="center border">
       <%=image_tag(item.small_image_url)%>
     </div>
     <br>
     <h4>
       <div class="center">
        <%= item.tagline %>
        </div>
     </h4>
     <br>
     <h4>
       <div class="center"><%=link_to item.title, item.web_url %>
       </div>
       <br>

  <% end %>
<% end %>

