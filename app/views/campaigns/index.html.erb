<h1>Campaigns#index</h1>

<%= form_tag("/", method: "get") do %>
  <p>
    <%= label_tag(:search, "Search for:") %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search campaigns", name: nil %>
  </p>
  <% @campaigns.each do |item| %>
     <h2><%= item.title %></h2><br>
     <%=image_tag(item.small_image_url) %><br>
     <h4><%= item.tagline %></h4><br>
     <%=link_to item.title, item.web_url %><br>

  <% end %>
<% end %>
<%= react_component('SearchApp') %>
